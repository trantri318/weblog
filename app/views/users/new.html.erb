<div class="row"
  <div class="col-lg-offset-2">
    <%= form_for @user, html: {class: "form-horizontal"} do |f| %>

      <div class="form-group">
        <%= f.label :name, "Name" %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter user name" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email" %>
        <div class="form-group">
          <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, "Phone Number" %>
        <div class="form-group">
          <%= f.text_field :phone_number, class: "form-control", placeholder: "Enter phone number" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password" %>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <div class="form-group">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password confirmation" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-offset-4">
          <%= f.submit "Register", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
