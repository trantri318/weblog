<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col">Category id</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"></th>
        <td><%= post.title%></td>
        <td><%= post.description %></td>
        <td><%= post.price %></td>
        <td><%= post.image %></td>
        <td><%= post.category_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
