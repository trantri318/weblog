<div class="row"
  <div class="col-lg-offset-2">
    <%= form_for @post, html: {class: "form-horizontal"} do |f| %>

      <div class="form-group">
        <%= f.label :title, "Title" %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control", placeholder: "Enter tilte" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, "Description" %>
        <div class="form-group">
          <%= f.text_area :description, class: "form-control", placeholder: "Enter description" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :price, "Price" %>
        <div class="form-group">
          <%= f.text_field :price, class: "form-control", placeholder: "Enter price" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :image, "Image" %>
        <div class="form-group">
          <%= f.text_field :image, class: "form-control", placeholder: "Enter image" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :category_id, "Category Id" %>
        <div class="form-group">
          <%= f.text_field :category_id, class: "form-control", placeholder: "Enter category id" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-offset-4">
          <%= f.submit "Create", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
